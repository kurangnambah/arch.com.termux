#!/bin/bash/

 tput civis
 arr="-\|/"
 while true; do
  for c in 90 31 91 32 33 34 35 95 36 97; do
   printf "\b\e[${c}m ${arr:i++%${#arr}:1} \e[0m" read slect
   if [[ $c == 31 && $c == 32 && $c == 33 ]]
    then
     echo -en "[ \e[${c}m ● \e[0m ${c}m 999 ]\n"
    else
     echo -en "[ \e[31m ● \e[0m ${c}m 999 ]\n"
   fi
   sleep .1
   echo -e "\e[${c}m ph      ,--------------------------------[version.0.0.1] \e[0m"
   echo -e "\e[${c}m ol     ,,--------------------------------[id.voltmeter]-\e[0m"
   echo -e "\e[${c}m ta    ,,,,,-----------------------------/ / / / / / / / \e[0m"
   echo -e "\e[${c}m ge      ,,-----------------------------/ / / / / / / / \e[0m"
   echo -e "\e[${c}m [ v.0 ] ,------------------------------/ / / / / / / / \e[0m"
   clear
  done
  done
