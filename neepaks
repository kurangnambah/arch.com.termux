#!/bin/bash/
 rndm_it(){
 while true; do
 RED=$(tput setaf 1)
 GREEN=$(tput setaf 2)
 NORMAL=$(tput sgr0)
 MSG="Ã— __"
 let COL=$(tput cols)-${#MSG}+${#GREEN}+${#NORMAL}
  printf "%s%${COL}s" "$MSG" "$GREEN[version.0.0.1]$NORMAL"
  printf "%s%${COL}s" " /___\\" "$GREEN/ / / / / / / /  $NORMAL"
# echo -e "-/   \ :: RANDOM Number lets try .. [neepaks] ::/nepaks [ ... ] -v-\n"
# echo -e "1) One only          2) Two digits        3) Three digits     4) four digits \n"
  sleep .2
  clear
 done
 if [ ! -d .data/.nepak ]
 then
  mkdir -p .data/.nepak
  chmod 755 .data/.nepak
  echo -en "G E N E R A T E \n\n" >> $PWD/.data/.nepak/recently
 fi
 if [ -e $PWD/.data/.nepak/recently ]
 then
  cat $PWD/.data/.nepak/recently
 fi
 echo -en "\n\n"
 read -r -p "enter the digit++ : " numopt
 echo -en "\n\n"
 case $numopt in
 1)
 # ONE ONLY
 NUMBER=$(cat /dev/urandom | tr -dc '0-9' | fold -w 256 | head -n 1 | head --bytes 1)
 echo -en "  $NUMBER   " >> $PWD/.data/.nepak/recently
 if [ "$NUMBER" == "" ];
  then
  echo  NUMBER=0
 fi
 clear
 ;;
 2)
 # TWO 1+1 ::TWOAGAPATS
 NUMBER=$(cat /dev/urandom | tr -dc '0-9' | fold -w 256 | head -n 1 | sed -e 's/^0*//' | head --bytes 2)
 echo -en "  $NUMBER   " >> $PWD/.data/.nepak/recently
 if [ "$NUMBER" == "" ];
  then
  echo  NUMBER=0
 fi
 clear
 ;;
 3)
 # THREE LERS ::TERELER-ELER
 NUMBER=$(cat /dev/urandom | tr -dc '0-9' | fold -w 256 | head -n 1 | sed -e 's/^0*//' | head --bytes 3)
 echo -en "  $NUMBER   " >> $PWD/.data/.nepak/recently
 if [ "$NUMBER" == "" ];
  then
  echo  NUMBER=0
 fi
 clear
 ;;
 4)
 # FOUR FHOURS ::PATS-PATS
 NUMBER=$(cat /dev/urandom | tr -dc '0-9' | fold -w 256 | head -n 1 | sed -e 's/^0*//' | head --bytes 4)
 echo -en "  $NUMBER   " >> $PWD/.data/.nepak/recently
 if [ "$NUMBER" == "" ];
  then
  echo  NUMBER=0
 fi
 clear
 ;;
 *)
 clear; wait; rndm_it; exit;;
 esac
 rndm_it
 }
rndm_it
