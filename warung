#!/bin/bash
cat << EOF
".---------------------------------------------------------------------------.\n"
'|________________________________________________________[ Warung Lite v0,0 ]'
'|                                                       / / / / / / / / / / |'
'|               __________________________                 6Â°               |'
'warung ..      |                          |                                 |'
'    ((|))      |                          |                                 |'
'    //|\\\      |                       ___|                                 |'
'   ///|\\\\\\     |          ______///////   |                                 |'
'  ////|\\\\\\\\    |___///////                |               /////////////////\|'
'  |\/\/\/\|    |                          |              //////////////////\\'
'  |/\/\/\/|    |                          |             /|/\/\/\/\/\/\/\/||||'
'./________.\___|  disingkat wr.           |__    ____ |\/|/\/\/\/\/\/\/\/||||'
'/\/\/\/\/\/\/\/|  â€¢ Â° Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—Ã—||  __/     /\/|/\/\/\/\/\/\/\/||||'
'||||||||||||||||[||]..___________________.||..________|||||||||||||||||||||||'
============================================================================âˆ†
EOF

if [ -e $PWD/.wr/sheet/* ]
then
if [ -d $PWD/.wr/sheet ]
then
cat  $PWD/.wr/sheet/*

read -r -p "[ remv / no-default ] " func

case $func in
remv)
rm -rf .wr
;;
*)
clear
bash warung
;;
esac
fi
else
echo "[crt/y]:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::[â€¢vâ€¢]"
echo "[+stock+] stock 0!day _EVERY'DAYðŸ™Œ_"
read -r -p "[ stock / no-default ] " altw
case $altw in
stock )
if [ ! -d .wr/sheet ]
then
 mkdir -p .wr/sheet
 chmod 755 .wr
fi
read -r -p "[:-_] \0-9/ Ã— input type number  .Ã—. [ NÂ° ] COLUMN .-> " coluy
read -r -p "[:-_] \0-9/ Ã— input type number  .Ã—. [ NÂ° ] ROW .-> " rowe

clear

x=0
y=0

echo -en "[ :: stock ][Â°-Â°\Â°|Â°/Â°-Â°] day stock sheet [ COLUMN/ROW [ $coluy/$rowe ] ] \n" >> $PWD/.wr/sheet/daystock
echo -en "::" >> $PWD/.wr/sheet/daystock

while [ $x -ne $coluy ]; do
if [[ $x -lt $coluy ]]
 then
 if [[ $coluy -gt $coluy ]]
  then
   echo -n ""
 fi
 x=$((x + 1))
 column=$((x))
 echo -en "  $column   " >> $PWD/.wr/sheet/daystock
fi
done
while [[ $y -ne $rowe ]]; do
if [[ $y -le $rowe ]]
 then
  y=$((y + 1))
  row=$((y))
  echo -en "$row\n\n" >> $PWD/.wr/sheet/daystock
fi
done
;;
*)
clear
bash warung
;;
esac
fi
