#!/bin/bash
cat << EOF
'.---------------------------------------------------------------------------.'
'|________________________________________________________[ Warung Lite v0,0 ]'
'|                                                       / / / / / / / / / / |'
'|               __________________________                 6°               |'
'warung ..      |                          |                                 |'
'    ((|))      |                          |                                 |'
'    //|\\\\      |                       ___|                                 |'
'   ///|\\\\\     |          ______///////   |                                 |'
'  ////|\\\\\\\\    |___///////                |               /////////////////\|'
'  |\/\/\/\|    |                          |              //////////////////\\'
'  |/\/\/\/|    |                          |             /|/\/\/\/\/\/\/\/||||'
'./________.\___|  disingkat wr.           |__    ____ |\/|/\/\/\/\/\/\/\/||||'
'/\/\/\/\/\/\/\/|  • ° ××××××××××××××××××××||  __/     /\/|/\/\/\/\/\/\/\/||||'
'||||||||||||||||[||]..___________________.||..________|||||||||||||||||||||||'
============================================================================∆
EOF
read -r -p "[:-_] \0-9/ × input type number  .×. [ N° ] COLUMN .-> " coluy
read -r -p "[:-_] \0-9/ × input type number  .×. [ N° ] ROW .-> " rowe
clear

x=0
y=0
echo -n ":: "
#  table=$((i * no))
while [ $x -ne $coluy ]; do
if [[ $x -lt $coluy ]]
 then
 if [[ $coluy -gt $coluy ]]
  then
   echo -n ""
 fi
 x=$((x + 1))
 column=$((x))
 echo -n "$column   "
fi
done

while [[ $y -ne $rowe ]]; do
if [[ $y -le $rowe ]]
 then
  y=$((y + 1))
  row=$((y))
  echo -e "$row \n"
fi
done
